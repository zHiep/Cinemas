@model Cinemas.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="#">Quản lý hệ thống</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-action="Index" asp-controller="Roles">Quản lý quyền truy cập</a>
            <span class="breadcrumb-item active">Tạo mới quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group">
                <div class="form-group row">
                    <label for="RoleName" class="col-sm-2 col-form-label"><h6>Tên quyền truy cập</h6></label>
                    <div class="col-sm-4">
                        <input asp-for="RoleName" type="text" class="form-control">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" style="margin-right:25px;">Tạo mới</button>
                        <a asp-action="Index" class="btn btn btn-danger">Hủy</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
